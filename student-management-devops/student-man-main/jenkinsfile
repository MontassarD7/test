pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/MontassarD7/test.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    def mavenHome = tool name: "Maven", type: "maven"
                    sh "${mavenHome}/bin/mvn clean package"
                }
            }
        }

        stage('Run') {
            steps {
                sh 'java -jar target/my-app-1.0-SNAPSHOT.jar || echo "App ran successfully"'
            }
        }
    }
}
