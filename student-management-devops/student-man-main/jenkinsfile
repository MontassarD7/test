pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('student-management-devops/student-man-main') {
                    withSonarQubeEnv('SonarQube') {
                        script {
                            // Use the Maven tool installed in Jenkins
                            def mavenHome = tool name: "Maven", type: "maven"
                            sh "${mavenHome}/bin/mvn clean verify sonar:sonar"
                        }
                    }
                }
            }
        } // closes stages
} // closes pipeline
