pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('MVN SONARQUBE') {
            steps {
                script {
                    // Navigate to the correct directory if necessary
                    dir('project-directory') {
                        echo 'Running SonarQube analysis..'
                        sh 'mvn clean verify sonar:sonar -Dsonar.host.url=http://localhost:9000'
                    }
                }
            }
        }
    }
}
