pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('MVN SONARQUBE') {
            steps {
                script {
                    // Add your SonarQube scan command here
                    echo 'Running SonarQube analysis..'
                    sh 'mvn clean verify sonar:sonar -Dsonar.host.url=http://localhost:9000'
                }
            }
        }
    }
}
